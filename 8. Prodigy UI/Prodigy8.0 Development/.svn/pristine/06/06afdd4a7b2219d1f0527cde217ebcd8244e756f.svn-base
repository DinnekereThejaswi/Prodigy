<div class="card">
  <div class="card-body">
    <form [formGroup]="StockCheckForm">
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="GS">GS</label>
            <select class="form-control" formControlName="GS" (change)="getCounter(StockCheckForm.value.GS)">
              <option [ngValue]="null">Select</option>
              <option *ngFor="let _GSList of GSList" [value]="_GSList.gsCode">
                {{_GSList.Name}} </option>
            </select>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">Counter</label>
            <select class="form-control" formControlName="CounterCode" #CounterCode (change)="getItem(StockCheckForm)">
              <option [ngValue]="null">Select</option>
              <option *ngFor="let Counter of CounterList" [ngValue]="Counter.CounterCode">
                {{Counter.CounterName}}
              </option>
            </select>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label class="control-label">Item</label>
            <select class="form-control" formControlName="Item" (change)="GetTagSummary(StockCheckForm)">
              <option [ngValue]="null">Select</option>
              <option *ngFor="let item of ItemList" [value]="item.ItemCode">
                {{item.ItemName}}
              </option>
            </select>
          </div>
        </div>
        <div class="col-sm-1">
          <div class="form-group">
            <i class="fa fa-refresh fa-2x" aria-hidden="true" (click)="GetTagSummary(StockCheckForm)"
              style=" margin-top: 35px;"> </i>
          </div>
        </div>
      </div>
    </form>
    <!-- Modal -->

  </div>
</div>
<div class="col-lg-12 col-md-12">
  <div class="card">
    <div class="row">
      <div class="col-5">
        <div class="social-widget">
          <div class="soc-header box-twitter" style="padding: 3px;">
            <h3 class="text-white">Existing Stock </h3>
          </div>
          <form [formGroup]="existingForm">
            <div class="soc-content">
              <div class="col-3 b-r">
                <h5 class="text-black">Qty</h5>
                <h4 class="font-medium">
                  <b>{{StockcheckSummaryHeader.Qty}}</b>
                </h4>

              </div>
              <div class="col-3 b-r">
                <h5 class="text-black">Gr. Wt</h5>
                <h4 class="font-medium"><b>{{StockcheckSummaryHeader.Grwt | number : '1.3-3'}}</b>
                </h4>
              </div>
              <div class="col-3 b-r">
                <h5 class="text-black">Nt. Wt</h5>
                <h4 class="font-medium"><b>{{this.StockcheckSummaryHeader.Nwt | number : '1.3-3'}}</b>
                </h4>

              </div>
              <div class="col-3 b-r">
                <h5 class="text-black">D.Cts</h5>
                <h4 class="font-medium"><b>{{this.StockcheckSummaryHeader.Dcts | number : '1.3-3'}}</b></h4>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="col-2">
        <div class="col-12">
          <h2> - </h2>
        </div>
      </div>
      <div class="col-5">
        <div class="social-widget">
          <div class="soc-header box-twitter" style="padding: 3px;background-color: #00FF7F">
            <h3 class="text-white">Scanned Stock </h3>
          </div>
          <form [formGroup]="ScannedForm">
