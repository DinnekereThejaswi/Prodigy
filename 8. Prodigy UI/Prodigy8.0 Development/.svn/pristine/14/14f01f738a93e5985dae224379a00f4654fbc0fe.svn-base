.card-header {
  border-radius: 15px !important;
}

.card {
  border-radius: 15px !important;

}

.card-body {
  padding      : 10px 30px 0px 30px !important;
  border-bottom: 2px solid black;
  border-radius: 15px;
}

.p-38 {
  height: 38px;
}

.text-white {
  color: white;
}

.Pointer {
  cursor: pointer;
}

.footer {
  position: fixed;
  left    : 0;
  bottom  : 0;
}

.hide {
  display: hide;
}

.show {
  display: block;
}

.accordion .card-header.collapsed:after {
  /* symbol for "collapsed" panels */
  content    : "\f067";
  position   : absolute;
  right      : 20px;
  font-size  : 20px;
  font-weight: 400;

  line-height: 1;
  margin-top : -25px;
  transition : .3s transform ease-in-out;
}

.accordion .card-header:after {
  font-family: 'FontAwesome';
  content    : "\f068";
  position   : absolute;
  right      : 20px;
  font-size  : 20px;
  font-weight: 400;
  line-height: 1;
  margin-top : -25px;
}

.text-red {
  color: red;
}

.text-green {
  color: #16d616;
}

.modal {
  overflow-y: auto;
}

.center {
  margin : auto;
  width  : 70%;
  padding: 5px;
}


.CustomWidth200 {
  width: 200pt;
}

.CustomWidth100 {
  width: 100pt;
}

.CustomWidth150 {
  width: 150pt;
}

.CustomWidth50 {
  width: 50pt;
}

.CustomWidth75 {
  width: 75pt;
}

.table-responsive {
  display           : block;
  width             : 99.9999%;
  overflow-x        : auto;
  -ms-overflow-style: -ms-autohiding-scrollbar;

}

@media (min-width:2200px) and (max-width: 2440px) {
  .table-responsive {
    overflow-x: hidden !important;

  }
}

@media (min-width: 300px) and (max-width: 2200px) {
  .table-responsive {
    overflow-x: auto !important;

  }
}