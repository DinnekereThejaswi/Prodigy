<div class="row" style="display:block;margin: auto;width: 30%;">
  <form class="form-horizontal">
      <div class="col-md-12">
          <div class="card">
              <div class="card-body">
                  <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label for="OrderNo">Transaction Date</label>
                          <input type="text" class="form-control" [(ngModel)]="applicationDate"
                    [ngModelOptions]="{standalone: true}" readonly />
                        </div>
                        <div class="form-group">
                          <input type="checkbox" readonly/>&nbsp;&nbsp;Scheme Collection
                        </div>                        
                        <div class="form-group">
                              <button
                                  class="printMe btn btn-success waves-effect waves-light btn-rounded btn-secondary"
                                  (click)="UpdateAccounts()"><i class="fal fa-save"></i>
                                  Update Accounts</button>
                                  <button
                                  class="printMe btn btn-danger waves-effect waves-light btn-rounded btn-secondary"
                                  ><i class="fal fa-remove"></i>
                                  Exit </button>    
                          </div>
                      </div >
                  </div>
              </div>
          </div>
      </div>
  </form>
</div>