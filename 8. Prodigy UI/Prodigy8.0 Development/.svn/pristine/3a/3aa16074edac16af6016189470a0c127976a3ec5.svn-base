:host {
  padding: 0!important;
}

.hiddenRow {
  padding: 0 !important;
}

.wrapper{
  margin: 25px 3em auto 3em;
}

.overlay{
  height: 400px; 
    overflow-y: scroll; 
    overflow-x: hidden; 
}

fieldset.scheduler-border {
  border: 2px solid #757575 !important;
  padding: 0 1.4em 0px 1.4em !important;
  margin: 0 0 1.5em 0 !important;
  /* box-shadow: 0px 0px 0px 0px #000; */
  border-radius: 15px;
}

legend.scheduler-border {
  font-size: 20px !important;
  font-family: "Montserrat", Helvetica, sans-serif;
  font-weight: 600;
  text-align: left !important;
  width:auto;
  padding:0 10px;
  border-bottom:none;
}

  .pointer{
    cursor: pointer;
  }

  .dropdown-label { 
    background-color:transparent /* This hides the background */; 
    background-image:none; 
    -webkit-appearance: none /* Webkit Fix */; 
    border:none; 
    box-shadow:none; 
    pointer-events: none;
    
  }

  tr.tr-hover-class:hover {
    background: rgba(234, 237, 255, 0.719) !important;
  }
  
  

// --
.dropdown {
  position: absolute;
  border: 1px solid grey;
  // display: none;
  z-index: 9999;
  background-color: white;
  padding: 5px;
}

 input:focus + .dropdown  {
  display: block;
  z-index: 9999999;
}

