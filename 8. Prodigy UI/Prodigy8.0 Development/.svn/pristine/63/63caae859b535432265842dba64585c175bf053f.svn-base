<div class="card">
  <div class="card-body">
    <form [formGroup]="PurchaseCancelForm" class="form-horizontal">
      <div class="row">
        <div class="col-md-2">
          <div class="form-group">
            <label for="OrderNo">Bill No</label>
            <input type="number" formControlName="BillNo" class="form-control" #BillNo name="BillNo"
              placeholder="Enter Bill Number" GreenBorder>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <div class="input-group">
              <button class="btn waves-effect waves-light btn-rounded btn-outline-secondary mt-4"
                (click)="getPurchaseDetails(BillNo.value)"><i class="fal fa-search"></i> Search</button>
              <button class="btn btn-warning waves-effect waves-light btn-rounded btn-secondary" type="button"
                (click)="Clear()" style="margin-top: 22px;"><i class="fal fa-close"></i>&nbsp;Clear</button>
            </div>
          </div>
        </div>
        <div class="col-md-3 float-right" *ngIf="hasPurchaseDetails">
          <div class="">
            <div class="text-right"><i class="fal fa-rupee-sign"></i>&nbsp; <span class="text-muted">
                Bill Amount</span>
              <h1 class="font-light">{{PurchaseBillData.TotalPurchaseAmount | number : '1.2-2'}}</h1>
            </div>
          </div>
        </div>
        <div class="col-md-3 float-right" *ngIf="hasPurchaseDetails">
          <div class="">
            <div class="text-right"><i class="fal fa-calendar-alt"></i>&nbsp; <span class="text-muted">Bill Date</span>
              <h1 class="font-light">{{PurchaseBillData.PDate | date:'dd/MM/yyyy'}}</h1>
            </div>
          </div>
        </div>
      </div>
      <div class="row" *ngIf="hasPurchaseDetails">
        <div class="col-md-4">
          <div class="form-group">
            <label for="CustomerID">Name</label>
            <div class="input-group">
              <input class="form-control" formControlName="CustName" [(ngModel)]="PurchaseBillData.CustName" type="text"
                readonly>
            </div>
          </div>
          <div class="form-group">
            <label for="City">Address3</label>
            <div class="input-group">
              <input class="form-control" [(ngModel)]="PurchaseBillData.Address3" formControlName="Address3" type="text"
                readonly>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label for="Name">Address1</label>
            <div class="input-group">
              <input class="form-control" formControlName="Address1" [(ngModel)]="PurchaseBillData.Address1" type="text"
                readonly>
            </div>
          </div>
          <div class="form-group">
            <label for="Name">Phone</label>
            <div class="input-group">
              <input class="form-control" type="text" readonly>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label for="Address">Address2</label>
            <div class="input-group">
              <input class="form-control" formControlName="Address2" [(ngModel)]="PurchaseBillData.Address2" type="text"
                readonly>
            </div>
          </div>
          <div class="form-group">
            <label for="Name">Mobile</label>
            <div class="input-group">
              <input class="form-control" formControlName="Mobile" [(ngModel)]="PurchaseBillData.Mobile_no" type="text"
                readonly>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <div class="form-group">
              <label for="Advance">Remarks<span class="textRed"> <i class="fas fa-star-of-life"></i></span></label>
              <div class="input-group">
                <input class="form-control" formControlName="Remarks" [(ngModel)]="PurchaseCancelObj.CancelRemarks"
                  type="text">
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row" *ngIf="hasPurchaseDetails">
        <div class="col-md-3">
          <div class="form-group">
            <div class="input-group">
              <button class="btn btn-danger waves-effect waves-light btn-rounded btn-secondary" (click)="submitPost()">
                <i class="far fa-window-close"></i> Cancel Purchase Bill</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<ng-container *ngIf="EnableJson">
  <pre>{{PurchaseCancelObj | json}}</pre>
</ng-container>