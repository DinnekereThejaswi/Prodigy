<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form class="form-horizontal" [formGroup]="tolerenceform">
                    <div class="row">

                        <div class="col-md-1">
                            <div class="form-group">
                                <label class="control-label" for="id">ID <span class="textRed"> <i
                                            class="fas fa-star-of-life"></i></span>
                                    <div class="tooltipdesign"> <i class="fal fa-question-circle"></i>
                                        <span class="tooltiptext tooltip-top">Enter ID </span>
                                    </div>
                                </label>
                                <input type="number" class="form-control" id="id" formControlName="frmCtrl_ID"
                                    [(ngModel)]="ToleranceModel.ID" placeholder="Enter ID" AlphaNumericValidator
                                    [readonly]="IsReadonly" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label" for="descript">Description <span class="textRed"> <i
                                            class="fas fa-star-of-life"></i></span>
                                    <div class="tooltipdesign"> <i class="fal fa-question-circle"></i>
                                        <span class="tooltiptext tooltip-top">Description </span>
                                    </div>
                                </label>
                                <input type="text" class="form-control" id="descript"
                                    formControlName="frmCtrl_Description" [(ngModel)]="ToleranceModel.Description"
                                    placeholder="Enter Description" AlphaNumericValidator />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label" for="minval">Min Val <span class="textRed"> <i
                                            class="fas fa-star-of-life"></i></span>
                                    <div class="tooltipdesign"> <i class="fal fa-question-circle"></i>
                                        <span class="tooltiptext tooltip-top">Min Val </span>
                                    </div>
                                </label>
                                <input type="number" class="form-control" id="minval" formControlName="frmCtrl_MinValue"
                                    [(ngModel)]="ToleranceModel.MinValue" placeholder="Enter Min Val "
                                    AlphaNumericValidator maxlength="5" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label" for="maxval">Max Val <span class="textRed"> <i
                                            class="fas fa-star-of-life"></i></span>
                                    <div class="tooltipdesign"> <i class="fal fa-question-circle"></i>
                                        <span class="tooltiptext tooltip-top">Max Val </span>
                                    </div>
                                </label>
                                <input type="number" class="form-control" id="maxval" formControlName="frmCtrl_MaxValue"
                                    [(ngModel)]="ToleranceModel.MaxValue" placeholder="Enter Max Val "
                                    AlphaNumericValidator maxlength="5" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <ng-container *ngIf="EnableAdd">
                                    <button
                                        class="btn btn-success waves-effect waves-light btn-rounded btn-secondary MT-2"
                                        style="margin-top: 1.2rem !important;" (click)="add(tolerenceform)">
                                        <i class="far fa-plus-circle"></i>&nbsp;Add</button>
                                </ng-container>
                                <ng-container *ngIf="EnableSave">
                                    <button
                                        class="btn btn-success waves-effect waves-light btn-rounded btn-secondary MT-2"
                                        style="margin-top: 1.2rem !important;" (click)="save(tolerenceform)">
                                        <i class="fal fa-save"></i>&nbsp;Save</button>
                                </ng-container>
                                <button class="btn  btn-warning waves-effect waves-light btn-rounded btn-secondary MT-2"
                                    style="margin-top: 1.2rem !important;" (click)="clear()">
                                    <i class="fal fa-trash"></i>&nbsp;Clear
                                </button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <br>
                            <button type="button"
                                class="btn btn-outline-success waves-effect waves-light btn-rounded btn-outline-secondary"
                                id="exampleModalLabel" (click)="printTolerance()"><i class="fal fa-print"></i>
                                Print</button>
                        </div>

                    </div>
                </form>
                <ng-container *ngIf="EnableJson">
                    <pre>{{ToleranceModel | json}}</pre>
                </ng-container>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="topbar">
                            <tr>
                                <th>ID</th>
                                <th>Description</th>
                                <th>Min Val</th>
                                <th>Max Val</th>
                                <th>Edit</th>
                                <th>Delete</th>


                            </tr>
                        </thead>
                        <tbody *ngFor="let _list of ListOfTolerance; let i=index">
                            <tr>
                                <td>{{_list.ID}}</td>
                                <td>{{_list.Description}}</td>
                                <td>{{_list.MinValue}}</td>
                                <td>{{_list.MaxValue}}</td>
                                <td (click)=editTolerance(_list)>
                                    <i class="far fa-edit" title="Edit"></i>
                                </td>
                                <td (click)="deleteTolerence(_list)">
                                    <i class="fas fa-trash" title="Delete"></i>
                                </td>
                            <tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!---------------------Print-->
<div class="modal fade" id="PrintToleranceTab" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document" style="max-width: 500px">
        <div class="modal-content">
            <div class="modal-header" style="position: sticky;">
                <h4 class="modal-title">Tolerance List</h4>
                <button type="button" style="float: right;"
                    class="btn btn-outline-success waves-effect waves-light btn-rounded btn-outline-secondary"
                    id="exampleModalLabel" (click)=printToleranceData()><i class="fal fa-print"></i> Print</button>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive" id="DisplayPrintListOfToleranceData">
                            <table id="elementsPeriodic">
                                <thead class="topbar">
                                    <th>ID</th>
                                    <th>Description</th>
                                    <th>Min Val</th>
                                    <th>Max Val</th>

                                </thead>
                                <tbody>
                                    <tr *ngFor="let _list of ListOfTolerance ">
                                        <td>{{_list.ID}}</td>
                                        <td>{{_list.Description}}</td>
                                        <td>{{_list.MinValue}}</td>
                                        <td>{{_list.MaxValue}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>