@media only screen and (max-width: 600px) {
    .columns {
        width: 100%;
    }
}

@media (min-width:2200px) and (max-width: 2440px) {
    .table-responsive {
        overflow-x: hidden !important;
    }
}

@media (min-width: 300px) and (max-width: 2200px) {
    .table-responsive {
        overflow-x: auto !important;
    }
}

.card-header {
    border-radius: 15px !important;
}

.card {
    border-radius: 15px !important;
}

.card-body {
    padding      : 10px 30px 0px 30px !important;
    border-bottom: 2px solid black;
    border-radius: 15px;
}

.p-38 {
    height: 38px;
}

.text-white {
    color: white;
}

.Pointer {
    cursor: pointer;
}

.footer {
    position: fixed;
    left    : 0;
    bottom  : 0;
}

.accordion .card-header:after {
    font-family: 'FontAwesome';
    content    : "\f068";
    position   : absolute;
    right      : 20px;
    font-size  : 20px;
    font-weight: 400;
    line-height: 1;
    margin-top : -25px;


}

.accordion .card-header.collapsed:after {
    /* symbol for "collapsed" panels */
    content    : "\f067";
    position   : absolute;
    right      : 20px;
    font-size  : 20px;
    font-weight: 400;
    line-height: 1;
    margin-top : -25px;
    transition : .3s transform ease-in-out;
}

#elementsPeriodic {
    font-family    : "Trebuchet MS", Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width          : 100%;
}

#elementsPeriodic td,
#elementsPeriodic th {
    border : 1px solid #ddd;
    padding: 8px;
}

#elementsPeriodic tr:nth-child(even) {
    background-color: #f2f2f2;
}

#elementsPeriodic tr:hover {
    background-color: #ddd;
}

#elementsPeriodic th {
    padding-top   : 12px;
    padding-bottom: 12px;
    text-align    : left;
    color         : white;
}

.modal {
    overflow-y: auto;
}

.center {
    margin : auto;
    width  : 70%;
    padding: 5px;
}