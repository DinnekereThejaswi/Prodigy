<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <form [formGroup]="Searchform" class="form-horizontal">
          <div class="row">
            <div class="col-md-3">
              <div class="form-group">
                <label for="search">Search </label>
                <input class="form-group" type="search" formControlName="searchText" placeholder="Enter SalesMan Name"
                  class="form-control" [(ngModel)]="SearchFilterData.searchText">
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <br>
                <button class="btn waves-effect waves-light btn-rounded btn-outline-secondary"
                  (click)="GetDataBySearch(Searchform)"><i class="fal fa-search"></i> Search</button>
                <button class="btn  btn-warning waves-effect waves-light btn-rounded btn-secondary MT-2"
                  (click)="ClearSearch()"><i class="fal fa-trash"></i> Clear</button>
              </div>
            </div>
            <div class="col-md" style="float: right;">
              <br>
              <button type="button" class="btn btn-success waves-effect waves-light btn-rounded btn-secondary MT-2"
                (click)=Print() id="exampleModalLabel"><i class="fal fa-print"></i>
                Print</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <form [formGroup]="SalesmanForm" class="form-horizontal">
          <div class="row">
            <div class="col-md-3">
              <div class="form-group">
                <label for="SalesManCode">Salesman Code </label>
                <input oninput="this.value = this.value.toUpperCase()" class="form-control"
                  formControlName="SalesManCodes" (input)="Codes.value = Codes.value.toUpperCase()"
                  [(ngModel)]="SalesmanListData.SalesManCode" [readonly]="isReadOnly" placeholder="Enter code"
                  type="text" #Codes>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <label for="SalesManName">Salesman Name </label>
                <input type="text" oninput="this.value = this.value.toUpperCase()" class="form-control"
                  (input)="Codes.value = Codes.value.toUpperCase()" [(ngModel)]="SalesmanListData.SalesManName"
                  formControlName="SalesManNames" maxlength="30" placeholder="Enter Name" #Codes>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <ng-container *ngIf="EnableAdd">
                  <button class="btn btn-success waves-effect waves-light btn-rounded btn-secondary MT-2"
                    style="margin-top: 1.2rem !important;" (click)="add(SalesmanForm)">
                    <i class="far fa-plus-circle"></i>&nbsp;Add</button>
                </ng-container>
                <ng-container *ngIf="EnableSave">
                  <button class="btn btn-success waves-effect waves-light btn-rounded btn-secondary MT-2"
                    style="margin-top: 1.2rem !important;" (click)="save(SalesmanForm)">
                    <i class="fal fa-save"></i>&nbsp;Save</button>
                </ng-container>
                <button class="btn  btn-warning waves-effect waves-light btn-rounded btn-secondary MT-2"
                  style="margin-top: 1.2rem !important;" (click)="clear()">
                  <i class="fal fa-trash"></i>&nbsp;Clear</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered  table-hover ">
            <thead class="topbar">
              <tr>
                <th>Salesman Code</th>
                <th>Salesman Name</th>
                <th>Status</th>
                <th>Edit</th>
                <th>Open</th>
                <th>Close</th>
              </tr>
            </thead>
            <tbody>
              <tr *ngFor=" let  _salesmans of SalesMenData  
                | paginate: { itemsPerPage:top, totalItems:totalItems, currentPage: pagenumber } 
                 ; let i = index">
                <td>{{_salesmans.SalesManCode}}</td>
                <td>{{_salesmans.SalesManName}}</td>
                <td [style.color]="getStatusColor(_salesmans.ObjStatus)">
                  <b>{{_salesmans.ObjStatus | statusName : _salesmans.ObjStatus }}</b>
                </td>
                <td align="center">
                  <i class="fas fa-edit" title="edit" (click)="editField(_salesmans)"></i>
                </td>
                <td align="center"><i class="fas fa-lock-open" title="open" (click)="openField(_salesmans)"></i>
                <td align="center">
                  <i class="fas fa-lock" title="close" (click)="closeField(_salesmans)"></i>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <pagination-controls (pageChange)="onPageChange($event)"></pagination-controls>
      </div>
    </div>
  </div>
  <ng-container *ngIf="EnableJson">
    <pre>{{SalesmanListData | json}}</pre>
  </ng-container>
</div>

<div class="modal fade" id="SalesManDetailsTab" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document" style="max-width: 900px">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn btn-outline-success waves-effect waves-light btn-rounded btn-outline-secondary"
          id="exampleModalLabel" (click)=print()><i class="fal fa-print"></i>
          Print</button>
        <h3 class="modal-title">{{bcode}}-SalesMan List</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <div class="table-responsive" id="TableData">
              <table class="table table-bordered table-hover">
                <thead class="topbar">
                  <tr>
                    <th>Salesman Code</th>
                    <th>Salesman Name</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody *ngFor="let _List of printData;let i=index">
                  <tr>
                    <td>{{_List.SalesManCode}}</td>
                    <td>{{_List.SalesManName}}</td>
                    <td [style.color]="getStatusColor(_List.ObjStatus)">
                      <b>{{_List.ObjStatus | statusName : _List.ObjStatus }}</b>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>