<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form class="form-horizontal">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label" for="ModuleName">Module Name <span class="textRed"> <i
                                            class="fas fa-star-of-life"></i></span>
                                    <div class="tooltipdesign"> <i class="fal fa-question-circle"></i>
                                        <span class="tooltiptext tooltip-top">Enter Module Name </span>
                                    </div>
                                </label>
                                <input type="text" class="form-control" [(ngModel)]="postMainModule.Name" id="Name"
                                    placeholder="Enter Module Name" [ngModelOptions]="{standalone: true}"
                                    AlphaNumericValidator />
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group">
                                <label class="control-label" for="SequenceNo">Seq No

                                </label>
                                <input type="number" class="form-control" id="SequenceNo"
                                    placeholder="Enter Sequence No" [(ngModel)]="postMainModule.SortOrder"
                                    [ngModelOptions]="{standalone: true}" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label" for="Class">Class<span class="textRed"></span>
                                    <div class="tooltipdesign"> <i class="fal fa-question-circle"></i>
                                        <span class="tooltiptext tooltip-top">Menu Class</span>
                                    </div>
                                </label>
                                <input type="text" class="form-control" id="SequenceNo" placeholder="Enter Class"
                                    [(ngModel)]="postMainModule.Class" [ngModelOptions]="{standalone: true}" readonly />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label" for="Icon">Icon<span class="textRed"></span>
                                    <div class="tooltipdesign"> <i class="fal fa-question-circle"></i>
                                        <span class="tooltiptext tooltip-top">Menu Icon</span>
                                    </div>
                                </label>
                                <input type="text" class="form-control" id="Icon" placeholder="Enter Icon"
                                    [(ngModel)]="postMainModule.Icon" [ngModelOptions]="{standalone: true}"
                                    autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <br>
                            <div class="form-group">
                                <ng-container *ngIf="EnableAdd">
                                    <button type="submit"
                                        class="btn btn-success waves-effect waves-light btn-rounded btn-secondary"
                                        (click)="Add()"><i class="fal fa-save"></i>&nbsp; Add</button>
                                </ng-container>
                                <ng-container *ngIf="EnableUpdate">
                                    <button type="submit"
                                        class="btn btn-success waves-effect waves-light btn-rounded btn-secondary"
                                        (click)="Update()"><i class="fal fa-save"></i>&nbsp; Update</button>
                                </ng-container>
                                <button type="submit"
                                    class="btn btn-danger  waves-effect waves-light btn-rounded btn-secondary"
                                    (click)="Clear()"><i class="fal fa-remove"></i>&nbsp;Clear</button>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <br>
                            <button class="btn btn-success waves-effect waves-light btn-rounded btn-secondary MT-2"
                                (click)="Print()" type="submit"><i class="fal fa-print"></i> Print</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="topbar">
                            <tr>
                                <th>SNo</th>
                                <th>Module Name</th>
                                <th>Sequence No</th>
                                <th>Status</th>
                                <th>Edit</th>
                                <th>Open</th>
                                <th>Close</th>

                            </tr>
                        </thead>
                        <tbody *ngFor="let _mainModuleList of MainModuleList;let i=index;">
                            <tr>
                                <td>{{_mainModuleList.ID}}</td>
                                <td>{{_mainModuleList.Name}}</td>
                                <td>{{_mainModuleList.SortOrder}}</td>
                                <td [style.color]="getStatusColor(_mainModuleList.Status)">
                                    <b>{{_mainModuleList.Status}}</b>
                                </td>
                                <td>
                                    <i class="far fa-edit" title="Edit" (click)="Edit(_mainModuleList)"></i>
                                </td>
                                <td>
                                    <i class="fas fa-lock-open" title="Open" (click)="Open(_mainModuleList)"></i>
                                </td>
                                <td>
                                    <i class="fas fa-lock" title="Close" (click)="Close(_mainModuleList)"></i>
                                </td>
                            <tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<ng-container *ngIf="EnableJson">
    <div class="col-md-3">
        <pre>{{postMainModule | json}}</pre>
    </div>
</ng-container>

<div class="modal fade" id="PrintDetailsTab" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document" style="max-width: 400px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button"
                    class="btn btn-outline-success waves-effect waves-light btn-rounded btn-outline-secondary"
                    id="exampleModalLabel" (click)=print()><i class="fal fa-print"></i>
                    Print</button>
                <h3 class="modal-title">{{bcode}}-Module List</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive" id="TableData">
                            <table class="table table-bordered table-hover">
                                <thead class="topbar">
                                    <tr>
                                        <th>Module ID </th>
                                        <th>Module Name</th>
                                    </tr>
                                </thead>
                                <tbody *ngFor="let _mainModuleList of printData;let i=index;">
                                    <tr>
                                        <td>{{_mainModuleList.ID}}</td>
                                        <td>{{_mainModuleList.Name}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>