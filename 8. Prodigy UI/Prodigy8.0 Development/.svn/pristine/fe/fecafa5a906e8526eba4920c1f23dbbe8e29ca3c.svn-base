<div class="row" style="display:block;margin: auto;width: 30%;">
  <form class="form-horizontal">
    <div class="col-md-12" *ngIf="ShowHide">
      <div class="card">
        <div class="card-body">

          <div class="row">
            <div class="col-md-12 ">
              <div class="form-group">
                <label for="">Receipt Number</label>
                <input class="form-control" name="ReceiptNo" type="number" [(ngModel)]="SummaryHeader.ReceiptNo">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <button class="printMe btn btn-success waves-effect waves-light btn-rounded btn-secondary"
                  (click)="getReceiptPrint(SummaryHeader.ReceiptNo)"><i class="fal fa-print"></i>
                  Reprint </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
